  </div>
<br>
  <div class="center">
                <%= button_tag :class => 'fa btn btn-info ' ,:id => 'login' do %>
                    <i class='icon-white icon-upload'></i> Login
                <% end %>           

<br>
  </div>
  <br><br>
<% end %>

</div></div>
